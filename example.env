# ============================================
# HRMS Backend - Environment Configuration
# ============================================
# All values MUST be provided by the CI/CD pipeline
# DO NOT commit actual secrets to this file

# Database Configuration (REQUIRED)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@postgres-service:5432/hrms_db

# Security (REQUIRED)
# Generate a strong secret key (min 32 characters)
SECRET_KEY=your-very-secure-secret-key-min-32-chars
FRONTEND_URL=https://your-frontend-domain.com

# Token Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
RESET_TOKEN_EXPIRE_MINUTES=15

# Email Configuration (REQUIRED for user notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@company.com

# Application Settings
DEBUG=false
DEV_MODE=false
HOST=0.0.0.0
PORT=8000
